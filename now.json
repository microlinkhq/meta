{
  "name": "microlink-meta",
  "alias": [
    "microlink-meta.now.sh"
  ],
  "version": 2,
  "regions": [
    "all"
  ],
  "public": true,
  "builds": [
    {
      "src": "public/*",
      "use": "@now/static"
    },
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "src/card.ts",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(favicon.ico|style.css|robots.txt)",
      "dest": "/public/$1"
    },
    {
      "src": "/dist/browser.js",
      "dest": "/browser.js"
    },
    {
      "src": "/(.+)",
      "dest": "/src/card.ts"
    }
  ]
}
